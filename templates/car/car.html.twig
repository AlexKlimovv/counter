{% extends 'base.html.twig' %}
{% block title %}Your cars{% endblock %}

{% block body %}
    <div class="shadow-lg mb-4">
        {% include 'navbar.html.twig' %}
    </div>
    <table class="table table-striped table-responsive-md">
        <thead>
            <tr>
                <th scope="col">Brand</th>
                <th scope="col">Model</th>
                <th scope="col">Registration number</th>
                <th scope="col">Production year</th>
                <th scope="col">Capacity ccm</th>
                <th scope="col">Fuel</th>
                <th scope="col">VIN</th>
            </tr>
        </thead>

        <tbody>
        {% for car in cars %}
            <tr>
                <td> {{ car.carBrand }} </td>
                <td> {{ car.carModel }} </td>
                <td> {{ car.regNumber }} </td>
                <td> {{ car.prodYear }} </td>
                <td> {{ car.capacity }} </td>
                <td> {{ car.typeOfFuel }} </td>
                <td> {{ car.vin }} </td>
                <td><a class="btn btn-warning" href="{{ path('app_car_edit', { car: car.id }) }}">Edit</a></td>
                <td><a class="btn btn-danger" href="{{ path('app_car_delete', { car: car.id }) }}">Delete</a></td>
            </tr>
        {% endfor %}
        </tbody>

    </table>
{% endblock %}
